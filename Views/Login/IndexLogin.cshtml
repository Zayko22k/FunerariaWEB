@{
    ViewBag.Title = "IndexLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="modal-login" id="modal-login">
    <div class="form-container sign-up-container">
        <form action="#">
            <h1>Crear Cuenta</h1>
            <input type="text" placeholder="Nombre" />
            <input type="text" placeholder="Apellido paterno" />
            <input type="text" placeholder="Apellido materno" />
            <input type="email" placeholder="Correo" />
            <input type="password" placeholder="Contraseña" />
            <input type="password" placeholder="Repita contraseña" />
            <button>Sign Up</button>
        </form>
    </div>
    <div class="form-container sign-in-container" dis>
        <!--Begin Inicio de Sesión-->
        <form action="~/Login/IndexLogin" method="post">
            <h1>Login</h1>
            <input type="email" name="email" placeholder="Correo" />
            <input type="password" name="pass" placeholder="Contraseña" />
            <a href="#">Olvidaste tu contraseña?</a>
            <span class="text-danger">
                @ViewBag.ErrorSession
            </span>
            <br />
            <button type="submit">Iniciar sesión</button>
        </form>
    </div>
    <!--End Inicio de Sesión-->
    <div class="overlay-container">
        <div class="overlay">
            <div class="overlay-panel overlay-left">
                <h1>Bienvenido  otra vez!</h1>
                <p>
                    Para mantenerse conectado con nosotros, inicie sesión con su datos
                </p>
                <button class="ghost" id="signIn">Iniciar sesión</button>
            </div>
            <div class="overlay-panel overlay-right">
                <h1>Hola, amigo!</h1>
                <p>
                    Ingrese sus datos personales y comience su viaje con nosotros
                </p>
                <button class="ghost" id="signUp">Registrarse</button>
            </div>
        </div>
    </div>
</div>